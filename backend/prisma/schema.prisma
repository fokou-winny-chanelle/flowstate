// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  fullName      String?
  isEmailVerified Boolean  @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  tasks         Task[]
  refreshTokens RefreshToken[]
  otps          Otp[]

  @@map("users")
  @@index([email])
}

model Otp {
  id        String   @id @default(uuid())
  userId    String?
  email     String
  code      String
  type      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("otps")
  @@index([email, code, type])
  @@index([expiresAt])
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  jti       String   @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
  @@index([userId])
  @@index([jti])
  @@index([expiresAt])
}

model Task {
  id                String   @id @default(uuid())
  userId            String
  title             String
  description       String?
  isCompleted       Boolean  @default(false)
  dueDate           DateTime?
  priority          Int?     @default(3)
  tags              String[] @default([])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  deletedAt         DateTime?
  projectId         String?
  estimatedDuration Int?
  energyLevel       String?

  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
  @@index([userId, isCompleted, dueDate])
}

